<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} - GitGraph Animator</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-900 text-white min-h-screen" data-theme="dark">
  <div class="container mx-auto px-4 py-8">
    {{{body}}}
  </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>

<!-- views/dashboard.handlebars -->
<header class="flex justify-between items-center mb-8">
  <div class="flex items-center">
    <i class="fas fa-calendar-alt text-green-400 text-2xl mr-3"></i>
    <h1 class="text-3xl font-bold">GitGraph Animator</h1>
  </div>
  
  <button id="theme-toggle" class="p-2 bg-gray-800 rounded-full hover:bg-gray-700 transition">
    <i class="fas fa-sun"></i>
  </button>
</header>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Current Message & Preview Panel -->
  <div class="bg-gray-800 rounded-lg shadow-lg p-6 lg:col-span-2">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Current Message</h2>
      <div class="flex gap-2">
        <button id="prev-message" class="p-2 bg-gray-700 rounded hover:bg-gray-600 transition" title="Previous Message">
          <i class="fas fa-chevron-left"></i>
        </button>
        <button id="refresh-message" class="p-2 bg-gray-700 rounded hover:bg-gray-600 transition" title="Refresh">
          <i class="fas fa-sync-alt"></i>
        </button>
        <button id="next-message" class="p-2 bg-gray-700 rounded hover:bg-gray-600 transition" title="Next Message">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>
    </div>
    
    <div class="bg-gray-700 rounded p-4 flex items-center justify-between">
      <p id="current-message-text" class="font-mono">
        {{#if currentMessage}}
          {{currentMessage}}
        {{else}}
          No active message
        {{/if}}
      </p>
      <button id="edit-message" class="p-2 bg-gray-600 rounded hover:bg-gray-500 transition" title="Edit Message">
        <i class="fas fa-edit"></i>
      </button>
    </div>
    
    <!-- Pixel Preview -->
    <div class="mt-6">
      <h3 class="text-lg font-semibold mb-3">Pixel Preview</h3>
      <div id="pixel-preview" class="bg-gray-700 rounded h-64 flex items-center justify-center relative overflow-hidden">
        <div class="text-center" id="preview-placeholder">
          <i class="fas fa-calendar-week text-3xl mb-2 text-gray-500"></i>
          <p class="text-gray-500">Message preview will appear here</p>
        </div>
        <canvas id="preview-canvas" class="hidden"></canvas>
        
        <div class="absolute bottom-2 right-2">
          <button id="apply-preview" class="p-2 rounded text-sm bg-blue-600 hover:bg-blue-500 transition">
            <i class="fas fa-save mr-1"></i> Apply
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Stats and Queue -->
  <div class="flex flex-col gap-6">
    <!-- Stats Panel -->
    <div class="bg-gray-800 rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Real-time Stats</h2>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-gray-700 rounded p-4">
          <div class="flex items-center gap-2 mb-1">
            <i class="fas fa-bolt text-yellow-400"></i>
            <span class="text-sm text-gray-400">Energy</span>
          </div>
          <p class="text-2xl font-bold">{{stats.kwhCharged}} kWh</p>
          <p class="text-sm text-gray-400">{{stats.sessions}} charging sessions</p>
        </div>
        
        <div class="bg-gray-700 rounded p-4">
          <div class="flex items-center gap-2 mb-1">
            <i class="fas fa-cloud text-blue-400"></i>
            <span class="text-sm text-gray-400">Weather</span>
          </div>
          <div class="flex items-center">
            <p class="text-2xl font-bold">{{stats.weather.temp}}Â°C</p>
            <div class="ml-3">
              <p class="text-sm">{{stats.weather.condition}}</p>
              <div class="flex items-center gap-2 text-xs text-gray-400">
                <i class="fas fa-wind"></i> {{stats.weather.wind}} km/h
                <i class="fas fa-tint ml-2"></i> {{stats.weather.humidity}}%
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Message Queue -->
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 flex-1">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Message Queue</h2>
        <button id="add-message" class="p-2 bg-green-700 rounded hover:bg-green-600 transition text-white">
          <i class="fas fa-plus"></i>
        </button>
      </div>
      
      <div id="message-queue" class="space-y-2">
        {{#if messageQueue.length}}
          {{#each messageQueue}}
            <div class="bg-gray-700 rounded p-3 flex items-center justify-between message-item" data-message="{{this}}">
              <p class="font-mono text-sm truncate">{{this}}</p>
              <div class="flex gap-1">
                <button class="p-1 hover:bg-gray-600 rounded edit-queue-item">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="p-1 hover:bg-gray-600 rounded promote-queue-item">
                  <i class="fas fa-chevron-right"></i>
                </button>
              </div>
            </div>
          {{/each}}
        {{else}}
          <div class="bg-gray-700 rounded p-4 text-center text-gray-500">
            <p>No messages in queue</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Settings Panel -->
<div class="bg-gray-800 rounded-lg shadow-lg p-6 mt-6">
  <h2 class="text-xl font-semibold mb-4">Settings</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div>
      <label class="block mb-2 text-sm font-medium">Refresh Interval</label>
      <select id="refresh-interval" class="w-full p-2 rounded bg-gray-700 border-gray-600 border">
        <option value="1">1 hour</option>
        <option value="3" selected>3 hours</option>
        <option value="6">6 hours</option>
        <option value="12">12 hours</option>
        <option value="24">24 hours</option>
      </select>
    </div>
    
    <div>
      <label class="block mb-2 text-sm font-medium">Message Generation</label>
      <select id="generation-frequency" class="w-full p-2 rounded bg-gray-700 border-gray-600 border">
        <option value="weekly" selected>Weekly</option>
        <option value="biweekly">Bi-weekly</option>
        <option value="monthly">Monthly</option>
      </select>
    </div>
    
    <div>
      <label class="block mb-2 text-sm font-medium">Font Style</label>
      <select id="font-style" class="w-full p-2 rounded bg-gray-700 border-gray-600 border">
        <option value="pixel" selected>Pixel</option>
        <option value="slim">Slim</option>
        <option value="bold">Bold</option>
      </select>
    </div>
  </div>
</div>

<!-- Modals -->
<div id="edit-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
  <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md">
    <h3 class="text-xl font-semibold mb-4">Edit Message</h3>
    <input type="text" id="edit-message-input" class="w-full p-3 bg-gray-700 border border-gray-600 rounded mb-4" maxlength="30">
    <div class="text-right">
      <button id="cancel-edit" class="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 mr-2">Cancel</button>
      <button id="save-edit" class="px-4 py-2 bg-green-600 rounded hover:bg-green-500">Save</button>
    </div>
  </div>
</div>

<div id="add-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
  <div class="bg-gray-800 rounded-lg p-6 w-full max-w-md">
    <h3 class="text-xl font-semibold mb-4">Add New Message</h3>
    <input type="text" id="add-message-input" class="w-full p-3 bg-gray-700 border border-gray-600 rounded mb-4" maxlength="30" placeholder="Max 30 characters">
    <div class="text-right">
      <button id="cancel-add" class="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 mr-2">Cancel</button>
      <button id="save-add" class="px-4 py-2 bg-green-600 rounded hover:bg-green-500">Add</button>
    </div>
  </div>
</div>