<section class="mb-8">
  <h2 class="text-xl font-bold mb-2">Current Message</h2>
  {{#if currentMessage}}
    <div id="current-message-text" class="p-4 bg-green-900 rounded text-white">
      {{currentMessage}}
    </div>
  {{else}}
    <p id="current-message-text" class="text-gray-400">No current message</p>
  {{/if}}
  <div id="pixel-preview" class="mt-4">
    <canvas id="preview-canvas" class="mx-auto"></canvas>
    <div id="preview-placeholder" class="text-gray-400">Loading preview...</div>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl font-bold mb-2">Message Queue</h2>
  {{#if messageQueue.length}}
    <ul class="list-disc pl-6 text-green-300">
      {{#each messageQueue}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-gray-400">Queue is empty</p>
  {{/if}}
</section>

<section class="mb-8">
  <h2 class="text-xl font-bold mb-2">Stats</h2>
  <div class="bg-gray-800 text-white p-4 rounded">
    <p><strong>kWh Charged:</strong> {{stats.kwhCharged}}</p>
    <p><strong>Sessions:</strong> {{stats.sessions}}</p>
    <p><strong>Weather:</strong> {{stats.weather.condition}}, {{stats.weather.temp}}Â°C</p>
  </div>
</section>

<section class="mb-8">
  <h2 class="text-xl font-bold mb-2">Add Message</h2>
  <form method="POST" action="/api/messages" class="flex gap-4">
    <input name="message" placeholder="Enter new message" class="p-2 rounded bg-gray-900 text-white" />
    <button type="submit" class="bg-green-600 px-4 py-2 rounded text-white hover:bg-green-700">Add</button>
  </form>
</section>

<section>
  <form method="POST" action="/api/rotate">
    <button type="submit" class="mt-4 bg-yellow-500 px-4 py-2 rounded text-black hover:bg-yellow-600">Rotate Message</button>
  </form>
</section>
